<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="#505050"
            android:padding="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/phone"
                android:padding="5dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/weixin"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/weibo"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/qq"
                android:padding="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_login"
            android:onClick="login"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/login"
            android:text="更多登录方式>"
            android:textColor="#A2A2A2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"/>


    </RelativeLayout>



    <LinearLayout
        android:background="@color/main_bg_color"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoucang"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#535353"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lishi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                android:textColor="#535353"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yejian"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textColor="#535353"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/xian"
        android:layout_below="@+id/ll2"
        />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine"
            android:layout_alignLeft="@+id/zhibo"
            android:layout_marginLeft="-20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/zhibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的直播 "
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_alignRight="@+id/jiantou"
            android:layout_marginRight="10dp"
            android:textColor="@color/tv_color"/>
        <ImageView
            android:id="@+id/jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/xian2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/xian"
        android:layout_below="@+id/r2"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian2"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头条商城"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友的200奖励金"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/xiaozi"
            android:layout_alignRight="@+id/jiantou2"
            android:layout_marginRight="20dp"/>


        <ImageView
            android:id="@+id/jiantou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian2"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东特供"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新人领188红包"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/xiaozi"
            android:layout_alignRight="@+id/jiantou4"
            android:layout_marginRight="20dp"/>


        <ImageView

            android:id="@+id/jiantou4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    <View
        android:id="@+id/xian3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/xian"
        android:layout_below="@+id/r2"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian2"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要爆料"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian2"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian2"
        android:background="@color/main_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/tv_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>